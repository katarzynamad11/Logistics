                        <VBox style="-fx-background-color: #0B1224; -fx-padding: 15; -fx-background-radius: 8;">
                            <Label style="-fx-text-fill: lightgray;" text="ðŸ›  Total Cost" />
                            <Label fx:id="totalCostLabel" style="-fx-text-fill: #FF5252; -fx-font-size: 18px;" />
