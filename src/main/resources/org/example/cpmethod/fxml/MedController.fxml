<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.cpmethod.controllers.MedController"
      alignment="TOP_CENTER" prefWidth="200" spacing="20"
      style="-fx-background-color: #000F1F; -fx-padding: 20 0 20 0;"
      fillWidth="true">

    <!-- Logo -->
    <ImageView fx:id="logoImageView" fitHeight="100" preserveRatio="true"
               fitWidth="120" pickOnBounds="true" />


    <!-- przyciski -->
    <VBox spacing="10" fillWidth="true">
        <Button fx:id="menuButton" maxWidth="Infinity" onAction="#handleMenuClick"
                styleClass="menu-button" text="MENU">
            <VBox.margin>
                <Insets top="0" right="0" bottom="0" left="15"/>
            </VBox.margin>
        </Button>

        <Button fx:id="mediatorButton" maxWidth="Infinity" onAction="#handleMediatorClick"
                styleClass="menu-button" text="Mediator Input">
            <VBox.margin>
                <Insets top="0" right="0" bottom="0" left="15"/>
            </VBox.margin>
        </Button>



        <Button fx:id="matrixButton" maxWidth="Infinity" onAction="#handleMatrixClick"
                styleClass="menu-button" text="Solution">
            <VBox.margin>
                <Insets top="0" right="0" bottom="0" left="15"/>
            </VBox.margin>
        </Button>

    </VBox>
</VBox>
